<h1>Tasks</h1>
<%= form_for(@task) do |form| %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :assigned_to %>
    <%= form.select :user_id, @user_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :project_id, readonly: true %>
  </div>

  <div class="field">
    <%= form.hidden_field :assigned_by, readonly: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit' %>
  </div>
<% end %>
<%= link_to 'Back', userprojects_path(id: @userproject.project_id) %>
