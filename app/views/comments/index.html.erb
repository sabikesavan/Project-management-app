<% if @comments == [] %>
  <p> No comments found</p>
<% else %>
  <% @comments.each do |comment| %>

    <% task = Task.find_by(id: comment.task_id) %>
    <p>
      <strong> Task Description : </strong>
      <%= task.description %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.comment %>
    </p><br>
  <% end %>
<% end %>
<%= link_to 'Back', userprojects_path(id: @userproject.project_id) %>
